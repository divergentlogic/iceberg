#single_container
  #single_container_top
  #single_container_center
    %h2 Forums
    %p.breadCrumb= breadcrumbs(@forum)

    %form#contentSearch.search{:method => "get", :action => ""}
      %p.fields
        %input#s2{:type => "text", :value => "Search Forum", :name => "s2", :onfocus => "if (this.value == 'Search Forum') {this.value = '';}", :onblur => "if (this.value == '') {this.value = 'Search Forum';}"}
        %button.go_button{:type => "submit", :name => "submit"} GO

    #article_wide
      .article_wide_top
      .article_wide_center
        %h3= "Create New Topic Under #{@forum.title}"
        - form_for(@topic, topics_path(@forum)) do |f|
          .forum_container
            = f.error_messages
            %table.forumtb_post{:width => "100%", :cellspacing => "0"}
              %tr.messageHeader
                %td{:colspan => 2}
              %tr
                %td.messageDef{:valign => "top"}
                  %p.bold= f.label :title, :caption => "Subject:"
                %td.newMessage{:valign => "top"}
                  = f.text_field :title
              %tr
                %td.messageDef{:valign => "top"}
                  %p.bold= f.label :message, :caption => "Message:"
                %td.newMessage{:valign => "top"}
                  = f.text_area :message
            
          .forum_controls
            %a.messageReply_Masterbutton{:href => forum_path(@parent)} Cancel
            %input.messageReply_Masterbutton{:type => 'submit', :value => 'Post Topic'}

        .clear

      .article_wide_bottom
              
    .clear

  #single_container_bottom
