- form_for(@board, path_for(:update_board, @board)) do |f|
  = hidden_form_method_field('put')
  
  = f.error_messages
  
  = f.label :title, :caption => 'Title'
  = f.text_field :title
  
  = f.label :description, :caption => 'Description'
  = f.text_area :description
  
  = f.label :allow_topics, :caption => 'Allow Topics?'
  = f.check_box :allow_topics
  
  = f.submit 'Update'
